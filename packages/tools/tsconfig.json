{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@/types": ["./src/types"],
      "@/providers/*": ["./src/providers/*"],
      "@/providers/vercel-ai/*": ["./src/providers/vercel-ai/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
